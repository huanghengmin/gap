    <servlet>
        <servlet-name>initServlet</servlet-name>
        <servlet-class>com.hzih.gap.core.servlet.InitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>




    <servlet>
        <servlet-name>DisplayChart</servlet-name>
        <servlet-class>org.jfree.chart.servlet.DisplayChart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayChart</servlet-name>
        <url-pattern>/DisplayChart</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>GenerateVerifyCodeImageServlet</servlet-name>
		<servlet-class>
			cn.collin.commons.web.servlet.ImageVerifyCodeServlet
		</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TimerCountReportServlet</servlet-name>
		<servlet-class>
            com.hzih.gap.web.servlet.TimerCountReportServlet
        </servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>

    <servlet-mapping>
		<servlet-name>GenerateVerifyCodeImageServlet</servlet-name>
		<url-pattern>/RandomCodeCtrl</url-pattern>
	</servlet-mapping>
   <!-- <servlet-mapping>
        <servlet-name>service</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>-->
    <session-config>
		<session-timeout>-1</session-timeout>
	</session-config>


	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
    <jsp-config>
        <taglib>
            <taglib-uri>/tags/core</taglib-uri>
            <taglib-location>/WEB-INF/c-1_0-rt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://www.collin.cn/taglib/lbs</taglib-uri>
            <taglib-location>/WEB-INF/lbs.tld</taglib-location>
        </taglib>
	</jsp-config>
	<resource-ref>
		<description>DB Connection</description> 
		<res-ref-name>jdbc/monitorDS</res-ref-name> 
		<res-type>javax.sql.DataSource</res-type> 
		<res-auth>Container</res-auth> 
	</resource-ref>

</web-app>
